@using Microsoft.AspNetCore.Mvc.Rendering
@using Models.Constants
@model List<Models.ViewModels.StatsViewModel>

@{
    ViewBag.Title = "Statistics";
    Layout = "_Layout";
}

<div class="container">
    <div class="page-header">
        <h3>Website Statistics</h3>
    </div>
    
    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th class="success">Year</th>
            <th>Count Students</th>
            <th>Count Drivers</th>
            <th>Count Navigators</th>
            <th>Count Hosts</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var stat in Model)
        {
            <tr>
                <td>@stat.Year</td>
                <td>@stat.CountStudents + @stat.CountDependents (@stat.DistinctCountries countries)</td>
                <td>@stat.CountDrivers</td>
                <td>@stat.CountNavigators</td>
                <td>@stat.CountHosts</td>
            </tr>
        }
        </tbody>
    </table>

</div>
