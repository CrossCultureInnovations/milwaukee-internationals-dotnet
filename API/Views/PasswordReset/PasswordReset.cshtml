@model Models.ViewModels.PasswordReset.PasswordResetViewModel

@{
    ViewBag.Title = "Password Reset";
    Layout = "_Layout";
}

@if (ViewData.ContainsKey("Error"))
{
    <div class="alert alert-danger alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">X</a>
        <strong>Error!</strong> @(ViewData["Error"])
    </div>
}

@if (ViewData.ContainsKey("Message"))
{
    <div class="alert alert-success alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">X</a>
        <strong>Success!</strong> @(ViewData["Message"])
    </div>
}

@using (Html.BeginForm("PasswordResetHandler", "PasswordReset", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    
    @Html.HiddenFor(x => x.Token)

    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new {@class = "form-control disabled", type = "email", required = "required"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username, new {@class = "form-control disabled", type = "text", required = "required"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password, new {@class = "form-control", type = "password", required = "required"})

        @Html.ValidationMessageFor(m => m.Password)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.ConfirmPassword)
        @Html.TextBoxFor(x => x.ConfirmPassword, new {@class = "form-control", type = "password", required = "required"})
        
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-success">Reset Password</button>
    </div>
}