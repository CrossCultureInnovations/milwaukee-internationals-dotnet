@using Microsoft.AspNetCore.Mvc.Rendering
@using Models.ViewModels
@model YearContextViewModel

@{
    ViewBag.Title = "Year Context Change";
    Layout = "_Layout";
    var selectedYear = Model.UpdatedYear;
}

@using (Html.BeginForm("UpdateYearContext", "Config", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <div class="alert alert-warning">
      <strong>Warning!</strong> Year Context is a global variable and changing this variable may cause all registration to be stored with a wrong year variable!
    </div>

    @Html.LabelFor(x => x.UpdatedYear, "Select a year context")

    @Html.DropDownListFor(x => x.UpdatedYear, Model.Years.Select(x => new SelectListItem {Text = x.ToString(), Value = x.ToString(), Selected = x == selectedYear}), new {@class = "form-control"})

    <div class="form-group" style="margin: 1rem;">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
}