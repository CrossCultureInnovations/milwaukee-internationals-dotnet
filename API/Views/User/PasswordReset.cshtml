@model Models.ViewModels.Identities.ChangePasswordViewModel

@{
    ViewBag.Title = "Password Reset";
    Layout = "_Layout";
}

<div class="container">
    @using (Html.BeginForm("PasswordResetHandler", "User", new { Model.Id }, FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Fullname)
            @Html.TextBoxFor(x => x.Fullname, new { @class = "form-control", type = "text", placeholder = "Enter fullname", required = "required", disabled=true })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.TextBoxFor(x => x.Password, new {@class = "form-control", type = "password", required = "required"})

            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ConfirmPassword)
            @Html.TextBoxFor(x => x.ConfirmPassword, new {@class = "form-control", type = "password", required = "required"})

            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update Password</button>
        </div>
    }
</div>