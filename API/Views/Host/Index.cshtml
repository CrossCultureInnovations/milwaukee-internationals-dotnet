@model IEnumerable<Models.Entities.Host>

@{
    ViewBag.Title = "Hosts";
    Layout = "_Layout";
}

<div class="container" ng-controller="hostListCtrl">
    <div class="page-header">
        <h3>List of Hosts (@Model.Count())</h3>
        
        <div class="clearfix">
            <button class="btn btn-default pull-right" ng-click="getAllHostPDF()">Download PDF</button>
        </div>
    </div>
    
    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>Fullname</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th class="hidden-xs">Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var host in Model)
        {
            <tr>
                <td>@host.Fullname</td>
                <td>@host.Email</td>
                <td>@host.Phone</td>
                <td>@host.Address</td>
                <td class="hidden-xs">
                    <a href="~/Host/edit/@host.Id" class="btn btn-primary">Edit</a>
                    <a href="~/Host/delete/@host.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>
