@model (Models.Entities.LocationMapping model, List<Models.Entities.Location> locations)

<div ng-init="">
    @Html.TextBox("Id", Model.model.Id, new { @class = "hidden" })

    @Html.TextBox("Year", Model.model.Year, new { @class = "hidden" })

    <div class="form-group">
        @Html.LabelFor(x => x.model.Source)
        @Html.DropDownList("SourceId", Model.locations.Select(x => new SelectListItem(x.Name, x.Id.ToString(), x.Id == Model.model.SourceId)), "Select Source", new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.model.Sink)
        @Html.DropDownList("SinkId", Model.locations.Select(x => new SelectListItem(x.Name, x.Id.ToString(), x.Id == Model.model.SinkId)), "Select Sink", new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.model.Description)
        @Html.TextArea("Description", Model.model.Description, new {@class = "form-control", type = "text", required = "required"})
    </div>
</div>