@using API.Extensions
@using Models.Enums
@model IEnumerable<Models.Event>

@{
    var userInfo = Context.Session.GetUserInfo();

    var adminRole = UserRoleEnum.Admin.ToString();
    var basicRole = UserRoleEnum.Basic.ToString();
}

<div class="container">
    <div class="page-header">
        <h3>List of Events (@Model.Count())</h3>
    </div>
    
    <table class="table table-hover table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Address</th>
            <th>Count of Students</th>
            @if (userInfo.UserRoleEnum == UserRoleEnum.Admin)
            {
                <th class="hidden-xs">Action</th>
            }
        </tr>
        </thead>
        <tbody>
        @foreach (var eventModel in Model)
        {
            <tr>
                <td>@eventModel.Name</td>
                <td>@eventModel.Description</td>
                <td>@eventModel.Address</td>
                <td>@(eventModel.Student?.Count ?? 0)</td>
                
                @if (userInfo.UserRoleEnum == UserRoleEnum.Admin)
                {
                    <a href="~/Event/Delete/@eventModel.Id" class="btn btn-danger">Delete</a>
                }
            </tr>
        }
        </tbody>
    </table>

</div>


