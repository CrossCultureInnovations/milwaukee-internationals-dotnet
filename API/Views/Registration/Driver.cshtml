@using Models
@model Driver

@{
    ViewBag.Title = "Driver-Navigator Registration";
    Layout = "_Layout";
}

<div class="text-center">
    <img class="img-responsive" src="~/images/tour-header.jpg" alt="background" />
</div>

<h3>Driver-Navigator Registeration</h3>

<br />

@using (Html.BeginForm("RegisterDriver", "Registration", FormMethod.Post, new { ng_controller = "driverRegistrationCtrl", ng_init = "requireNavigator = true; role = true;" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Fullname)
        @Html.TextBoxFor(x => x.Fullname, new { @class = "form-control", type = "text" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Phone)
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", type = "tel" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Role)
        @Html.TextBoxFor(x => x.Role, new { @class = "form-control hidden", ng_bind = "role ? 'Driver' : 'Navigator'" })
        <toggle class="pull-right" ng-model="role" on="Driver" off="Navigator" onstyle="btn-success" offstyle="btn-primary"></toggle>
    </div>
    
    <div ng-if="role">
        <div class="form-group">
            @Html.LabelFor(x => x.Capacity)
            @Html.TextBoxFor(x => x.Capacity, new { @class = "form-control", type = "number", min = "1", max = "7" })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.RequireNavigator)
            @Html.CheckBoxFor(x => x.RequireNavigator, new { @class = "form-control hidden", ng_bind = "requireNavigator" })
            <toggle class="pull-right" ng-model="requireNavigator" on="Yes" off="No" onstyle="btn-success" offstyle="btn-danger"></toggle>
        </div>
        
        <div class="form-group" ng-if="!requireNavigator">
            @Html.LabelFor(x => x.Navigator)
            @Html.TextBoxFor(x => x.Navigator, new { @class = "form-control" })
        </div>
    </div>
    
    <input class="btn btn-primary" type="submit" value="Register" />
}