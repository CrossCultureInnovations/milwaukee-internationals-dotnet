@model Models.Entities.Driver

@{
    ViewBag.Title = "Edit Driver";
    Layout = "_Layout";
}

<div class="text-center">
    <img class="img-responsive" src="~/images/tour-header.jpg" alt="background" />
</div>

<div class="container">
    <div class="page-header">
        <h3>Driver Registration</h3>
    </div>
    
    <br />
    
    @await Html.PartialAsync("SimpleAlertContent", ViewData)
    
    @using (Html.BeginForm("RegisterDriver", "Registration", FormMethod.Post, new { ng_controller = "driverRegistrationCtrl", wait_on_submit = "" }))
    {
        @(await Html.PartialAsync("DriverContent", Model, new ViewDataDictionary(ViewData) {{ "Type", "Save"}}))
        
        <div class="form-group" ng-init="agreeSms = true; agreeSms_val = agreeSms" style="margin-bottom: 3rem">
            <label style="max-width: 50rem; font-weight: 500">
                By submitting your number, you provide express written consent to receive SMS from Milwaukee Internationals. Message frequency varies. Text STOP to opt out or HELP for support.
            </label>
            <toggle class="pull-right" ng-model="agreeSms" on="Agree" off="Disagree" onstyle="btn-primary" offstyle="btn-default" ng-change="agreeSms_val = agreeSms"></toggle>
        </div> 
        
        <input class="btn btn-primary" type="submit" value="Register" ng-disabled="!agreeSms" />
    }
</div>