@using Microsoft.Extensions.Options
@using Models.Constants
@using reCAPTCHA.AspNetCore
@model Models.ViewModels.Identities.RegisterViewModel
@inject IOptions<RecaptchaSettings> RecaptchaSettings

@{
    ViewBag.Title = "Register user";
    Layout = "_Layout";
}

<div class="container" ng-controller="userRegistrationCtrl" ng-init="error = false; invitation_code_value = '@ApiConstants.InviteCode'">
    <div class="page-header">
        <h3>Please register</h3>
    </div>
    
    <div class="alert alert-danger" ng-if="error">
        <p>Invalid invitation code!</p>
    </div>
    
    @using (Html.BeginForm("RegisterHandler", "Identity", FormMethod.Post, new { @class = "form-horizontal", ng_submit="validateInvitationCode($event)" }))
    {                
        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-2" })
        
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Email, new { type = "email", placeholder = "Enter email", @class = "form-control", required = "required" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.Fullname, new { @class = "control-label col-sm-2" })
        
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Fullname, new { type = "text", placeholder = "Enter fullname", @class = "form-control", required = "required" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.PhoneNumber, new { @class = "control-label col-sm-2" })
        
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PhoneNumber, new { type = "tel", placeholder = "Enter phone number", @class = "form-control", required = "required" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.Username, new { @class = "control-label col-sm-2" })
        
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Username, new { type = "text", placeholder = "Enter username", @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "control-label col-sm-2" })

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Password, new { type = "password", placeholder = "Enter password", @class = "form-control", required = "required" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelForModel("Invitation code", new { @class = "control-label col-sm-2" })

            <div class="col-sm-10">
                @Html.TextBox("invitation_code", "", new { type = "text", placeholder = "Enter invitation code", @class = "form-control", required = "required", ng_model = "invitation_code" })
            </div>
        </div>
        
        @Html.Recaptcha(RecaptchaSettings.Value)

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    }
</div>